{
    "$schema": "http://json.schemastore.org/template",
    "author": "Zakhar Guskov",
    "classifications": [
        "Common",
        "Web",
        "Web API"
    ],
    "name": "My microservice template",
    "description": "This template is for quickly creating microservices in the onion architecture",
    "identity": "MicroserviceTemplate",
    "shortName": "ggservice",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "sourceName": "MicroserviceTemplate",
    "preferNameDirectory": true,
    "symbols": {
        "Framework": {
            "type": "parameter",
            "description": "The target framework for the project.",
            "datatype": "choice",
            "choices": [
                {
                    "choice": "net8.0"
                }
            ],
            "defaultValue": "net8.0",
            "replaces": "{TargetFramework}"
        }
    },
    "sources": [
        {
            "modifiers": [
                {
                    "exclude": [
                        ".vs/**",
                        ".idea/**",
                        "_ReSharper.Caches/**",
                        ".template_config/**"
                    ]
                }
            ]
        }
    ]
}